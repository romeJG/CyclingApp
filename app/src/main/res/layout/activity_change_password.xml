<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@color/MidnightBlue"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/tvPleaseLogin"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:text="Privacy Settings"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="100px" />

    <EditText
        android:id="@+id/password"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvPleaseLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_users"
        android:drawablePadding="24dp"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textSize="35px" />

    <EditText
        android:id="@+id/firstPassword"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_lock_24dp"
        android:drawablePadding="24dp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textColor="@color/Black"
        android:textColorHint="@color/Black"
        android:textSize="35px" />

    <EditText
        android:id="@+id/secondPassword"
        android:layout_width="268dp"
        android:layout_height="49dp"
        android:layout_below="@+id/firstPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/ic_lock_24dp"
        android:drawablePadding="24dp"
        android:hint="Re-Enter Password"
        android:inputType="textPassword"
        android:textColorHint="@color/Black"
        android:textSize="35px" />

    <Button
        android:id="@+id/btnLoginCreate"
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:layout_below="@id/secondPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="68dp"
        android:background="@color/Black"
        android:padding="50px"
        android:text="UPDATE PASSWORD"
        android:textColor="@color/White"
        android:textSize="25px" />

    <TextView
        android:id="@+id/etMainUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoginCreate"
        android:layout_marginTop="26dp"
        android:text="Username"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>